def lightP8():
    i = 0
    while i < 1023: 
        pins.analog_write_pin(AnalogPin.P8, i)
        pause(100)
        i += 50

def dimP8():
    i = 1023
    while i > 0:
            pins.analog_write_pin(AnalogPin.P8, i)
            pause(100)
            i-= 50
def lightP12():
    i = 0
    while i < 1023: 
        pins.analog_write_pin(AnalogPin.P12, i)
