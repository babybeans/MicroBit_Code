    i = 1023
    while i > 0:
            pins.analog_write_pin(AnalogPin.P15, i)
            pause(100)
            i-= 50


def on_forever():
    basic.show_leds("""
            . . . . .
            . . # . .
            . # # # .
            # # # # #
            . . # . .
            """)


    lightP8()
    lightP12()
    lightP13()
    lightP16()
    lightP14()
    lightP15()
    dimP8()
    dimP12()
    dimP13()
    dimP16()
    dimP14()
    dimP15()

basic.forever(on_forever)
